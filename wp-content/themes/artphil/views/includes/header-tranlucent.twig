<header class="header-tranlucent">
    <div class="container">
        <div class="logo">
            <a href="{{home_url}}"><img src="{{site.theme.link}}/assets/images/logo/logo-white.png" alt="logo-white"></a> 
        </div><!-- .logo -->
        <nav id="nav-main" class="nav-main" role="navigation">
    		<ul class="nav">
    		{% for item in menu.get_items %}
    			<li class="nav-item {{item.classes | join(' ')}}">
    				<a class="nav-link" href="{{item.get_link}}">{{item.title}}</a>
    				{% if item.get_children %}
    					<ul class="nav nav-drop">
    					{% for child in item.get_children %}
    						<li class="nav-drop-item">
    							<a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
    						</li>
    					{% endfor %}
    					</ul>
    				{% endif %}
    			</li>
    		{% endfor %}
    		</ul>
    	</nav><!-- #nav -->
    	<div class="social">
    	    <ul>
            	<li><a href="#"><img src="{{site.theme.link}}/assets/images/icon/icon-facebook.png" alt="icon-facebook"></a></li>
            	<li><a href="#"><img src="{{site.theme.link}}/assets/images/icon/icon-pinterest.png" alt="icon-pinterest"></a></li>
            	<li><a href="#"><img src="{{site.theme.link}}/assets/images/icon/icon-vimeo.png" alt="icon-vimeo"></a></li>
            	<li><a href="#"><img src="{{site.theme.link}}/assets/images/icon/icon-instagram.png" alt="icon-instagram"></a></li>
            </ul>
    	</div><!-- .social -->
    </div>
</header>